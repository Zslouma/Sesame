<?xml version="1.0" encoding="UTF-8"?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                     xmlns:common="clr-namespace:Syracuse.Mobitheque.UI.Views.Templates"
                     xmlns:viewModels="clr-namespace:Syracuse.Mobitheque.Core.ViewModels;assembly=Syracuse.Mobitheque.Core"
                     xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
                     xmlns:local="clr-namespace:Syracuse.Mobitheque.UI" 
                     x:TypeArguments="viewModels:HomeViewModel"
                     x:Class="Syracuse.Mobitheque.UI.Views.HomeView"
                     xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <NavigationPage.TitleView >
        <common:SearchBarTemplate />
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <yummy:PancakeView Margin="0,30,0,0" CornerRadius="32,32,0,0" VerticalOptions="FillAndExpand" BackgroundColor="{d:DynamicResource AppSecondaryBackgroundColor}">
            <Grid VerticalOptions="FillAndExpand">
                <StackLayout Orientation="Vertical" 
                             VerticalOptions="FillAndExpand"
                             Padding="15, 15, 15, 0">
                    <Grid Padding="10,0" VerticalOptions="FillAndExpand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" Text="{Binding Library}" FontAttributes="Bold" FontSize="{d:DynamicResource FontSizeTitle}" TextColor="{d:DynamicResource DarkTextColor}"></Label>
                        <Label Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="End" Text="{x:Static local:AppResource.News }" FontAttributes="Bold" TextColor="{d:DynamicResource LigthGreyTextColor}" IsVisible="{Binding NotCurrentEventReverse}"></Label>
                    </Grid>
                    <Label Margin="10" HorizontalTextAlignment="Start" Text="{x:Static local:AppResource.NotCurrentEvent}" IsVisible="{Binding NotCurrentEvent}" />
                    <ListView x:Name="resultsListEvent"
                      IsVisible="{Binding IsEvent}"
                      CachingStrategy="RecycleElement"
                      ItemsSource="{Binding Results}" 
                      SeparatorVisibility="None"
                      Margin="0,0,0,20"
                      RowHeight="235" 
                      VerticalScrollBarVisibility="Never"
                      IsPullToRefreshEnabled="False">
                        <ListView.ItemTemplate >
                            <DataTemplate>
                                <ViewCell>
                                    <Frame HasShadow="True" Padding="0, 5, 0, 5">
                                        <StackLayout Orientation="Vertical" BackgroundColor="White" Padding="5, 0, 5, 0">
                                            <Image VerticalOptions="Fill" HorizontalOptions="Fill" Aspect="AspectFill" Source="{Binding FieldList.Image}" HeightRequest="90"/>
                                            <StackLayout Padding="0, 5, 0, 0"  Orientation="Vertical" >
                                                <Label Text="{Binding FieldList.CroppedTitle}" FontAttributes="Bold" FontSize="{d:DynamicResource FontSizeTitle}" TextColor="{d:DynamicResource DarkTextColor}"/>
                                                <Grid HorizontalOptions="Fill">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.4*" />
                                                        <ColumnDefinition Width="0.6*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Text="{Binding FieldList.SubjectTopicFirstUpper}" FontAttributes="Bold" FontSize="Medium" TextColor="{d:DynamicResource LigthGreyTextColor}" ></Label>
                                                    <Label Grid.Column="1" Text="{Binding FieldList.SubjectLocation[0]}" FontAttributes="Bold" HorizontalTextAlignment="End" FontSize="Medium" TextColor="{d:DynamicResource LigthGreyTextColor}" ></Label>
                                                </Grid>
                                                <Label Text="{Binding FieldList.DateTime_String}" FontSize="Small" TextColor="{d:DynamicResource DarkTextColor}"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>

                        </ListView.ItemTemplate>
                        <ListView.Footer>
                            <material:MaterialButton IsVisible="{Binding DisplayLoadMore}" BackgroundColor="{d:DynamicResource AppBackgroundColor}" Text="{x:Static local:AppResource.LoadMore}" Command="{Binding LoadMore}" VerticalOptions="Center"></material:MaterialButton>
                        </ListView.Footer>
                    </ListView>
                    <ListView x:Name="resultsListDocument" 
                              IsVisible="{Binding ReverseIsEvent}"
                              CachingStrategy="RecycleElement"
                              ItemsSource="{Binding Results}"
                              SeparatorVisibility="None"
                              RowHeight="170"
                              Margin="0,0,0,20"
                              SelectionMode="None"
                              VerticalScrollBarVisibility="Never"
                              IsPullToRefreshEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal" Padding="7, 0, 7, 0">
                                        <Image VerticalOptions="Center" Source="{Binding FieldList.Image}" HeightRequest="120" WidthRequest="90" BackgroundColor="Transparent" Margin="5"/>
                                        <StackLayout VerticalOptions="Center" Orientation="Vertical">
                                            <Label TextColor="Black" Text="{Binding FieldList.CroppedTitle}" FontAttributes="Bold" FontSize="Medium"/>
                                            <Label TextColor="Gray" Text="{Binding FieldList.shortDesc}" MaxLines="2" FontSize="Small"/>
                                            <StackLayout VerticalOptions="CenterAndExpand" Orientation="Horizontal">
                                                <Frame VerticalOptions="Center" WidthRequest="15" HeightRequest="15"  CornerRadius="20"   Margin="0" Padding="0" BackgroundColor="{Binding Resource.ColorStatus}"/>
                                                <Label TextColor="Gray" FontAttributes="Bold" VerticalOptions="Center" FontSize="Medium" Text="{Binding Resource.TextStatus}"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Footer>
                            <material:MaterialButton IsVisible="{Binding DisplayLoadMore}" BackgroundColor="{d:DynamicResource AppBackgroundColor}" Text="{x:Static local:AppResource.LoadMore}" Command="{Binding LoadMore}" VerticalOptions="Center"></material:MaterialButton>
                        </ListView.Footer>
                    </ListView>
                </StackLayout>
                <AbsoluteLayout IsVisible="{Binding IsBusy}" VerticalOptions="FillAndExpand" Opacity="0.6" BackgroundColor="Gray" >
                    <ActivityIndicator IsRunning="True" AbsoluteLayout.LayoutFlags="PositionProportional" Color="White" AbsoluteLayout.LayoutBounds=".5,.5,-1,-1" />
                </AbsoluteLayout>
            </Grid>
        </yummy:PancakeView>
    </ContentPage.Content>

</views:MvxContentPage>